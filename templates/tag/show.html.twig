{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            {% if tag.posts.count %}
                <tr>
                    <th>Articles</th>
                    <td>
                        {% for post in posts %}
                            <ul>
                                <li>
                                    <a href="{{ path('app_post_show', {'id': post.id}) }}">
                                        {{ post.title }}
                                    </a>
                                </li>
                            </ul>
                        {% endfor %}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_tag_index') }}">back to list</a>

    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}">edit</a>

    {{ include('tag/_delete_form.html.twig') }}
{% endblock %}
